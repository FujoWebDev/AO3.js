{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "@types/jest"],
    "moduleResolution": "Node",
    "module": "es2022",
    "paths": {
      "src/*": ["./src/*"],
      "types/*": ["./types/*"]
    },
    "resolveJsonModule": true,
    "lib": ["es2022"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/"]
}
